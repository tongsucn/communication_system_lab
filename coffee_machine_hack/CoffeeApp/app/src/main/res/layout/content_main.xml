<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.acron.coffeeapp.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/grid_content"
        android:columnCount="4"
        android:rowCount="9"
        >

        <TextView
            android:id="@+id/txtTitle"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnSpan="4"
            android:text="Coffee Machine 1"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/txtPower"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnSpan="2"
            android:layout_gravity="left"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_columnWeight="1"
            />
        <ImageView
            android:id="@+id/imgPower"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_gravity="right"
            android:layout_columnWeight="1"
            />
        <ImageView
            android:id="@+id/imgPowerStatus"
            android:layout_column="3"
            android:layout_row="1"
            android:layout_gravity="right"
            android:layout_columnWeight="1"
            />

        <TextView
            android:id="@+id/txtCup"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_columnSpan="2"
            android:layout_gravity="left"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_columnWeight="1"
            />
        <ImageView
            android:id="@+id/imgCup"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_gravity="right"
            android:layout_columnWeight="1"
            />
        <ImageView
            android:id="@+id/imgCupStatus"
            android:layout_column="3"
            android:layout_row="2"
            android:layout_gravity="right"
            android:layout_columnWeight="1"
            />

        <TextView
            android:id="@+id/txtBeans"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_columnSpan="2"
            android:layout_gravity="left"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_columnWeight="1"
            />
        <ImageView
            android:id="@+id/imgBeans"
            android:layout_column="2"
            android:layout_row="3"
            android:layout_gravity="right"
            android:layout_columnWeight="1"
            />
        <ImageView
            android:id="@+id/imgBeanStatus"
            android:layout_column="3"
            android:layout_row="3"
            android:layout_gravity="right"
            android:layout_columnWeight="1"
            />

        <TextView
            android:id="@+id/txtWater"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_columnSpan="2"
            android:layout_gravity="left"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_columnWeight="1"
            />
        <ImageView
            android:id="@+id/imgWater"
            android:layout_column="2"
            android:layout_row="4"
            android:layout_gravity="right"
            android:layout_columnWeight="1"
            />
        <ImageView
            android:id="@+id/imgWaterStatus"
            android:layout_column="3"
            android:layout_row="4"
            android:layout_gravity="right"
            android:layout_columnWeight="1"
            />

        <TextView
            android:id="@+id/txtTray"
            android:layout_column="0"
            android:layout_row="5"
            android:layout_columnSpan="2"
            android:layout_gravity="left"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_columnWeight="1"
            />
        <ImageView
            android:id="@+id/imgTray"
            android:layout_column="2"
            android:layout_row="5"
            android:layout_gravity="right"
            android:layout_columnWeight="1"
            />
        <ImageView
            android:id="@+id/imgTrayStatus"
            android:layout_column="3"
            android:layout_row="5"
            android:layout_gravity="right"
            android:layout_columnWeight="1"
            />

        <ToggleButton
            android:id="@+id/btnProd1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="6"
            android:layout_columnWeight="1"
            android:textOff="Product 1"
            android:textOn="Product 1"
            android:visibility="gone"
            />
        <ToggleButton
            android:id="@+id/btnProd2"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_row="6"
            android:layout_columnWeight="1"
            android:textOff="Product 2"
            android:textOn="Product 2"
            android:visibility="gone"
            />

        <ToggleButton
            android:id="@+id/btnProd3"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="7"
            android:layout_columnWeight="1"
            android:textOff="Product 3"
            android:textOn="Product 3"
            android:visibility="gone"
            />
        <ToggleButton
            android:id="@+id/btnProd4"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_row="7"
            android:layout_columnWeight="1"
            android:textOff="Product 4"
            android:textOn="Product 4"
            android:visibility="gone"
            />

        <ToggleButton
            android:id="@+id/btnProd5"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="8"
            android:layout_columnWeight="1"
            android:textOff="Product 5"
            android:textOn="Product 5"
            android:visibility="gone"
            />
        <ToggleButton
            android:id="@+id/btnProd6"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_row="8"
            android:layout_columnWeight="1"
            android:textOff="Product 6"
            android:textOn="Product 6"
            android:visibility="gone"
            />



    </GridLayout>
</RelativeLayout>
